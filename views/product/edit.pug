extends ../layout.pug

block content
  form.form.center-form(method='post', enctype='multipart/form-data')
    h2(align='center') Editar Producto
    .form-group
      label(for='name') Nombre del Articulo
      input#name.input-field(name='name', type='text', value=`${product.name}`,required)
    .form-group
      label(for='description') Descripcion
      textarea#description.input-field(name='description', type='text')=product.description
    .form-group
      label(for='price') Precio
      input#price.input-field(name='price', type='number', step="0.01" min="0", value=`${product.price}`,required)
    .form-group
      label(for='image') Imagen
      input#image.input-field(name='image', type='file', accept='.jpg,.jpeg,.png',required)
    .form-group
      label
      img.product-img(src=`${product.image}` align='center')
    .form-group
      input.form-btn.btn(type='submit', value='actualizar')
      a.btn.btn-small.btn-danger(href=`/`)= 'Cancelar'
